@page "{account:int}"
@model SecuritySite.Pages.Account.LocationModel
@{
}

<link href="~/css/account.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<script src="~/js/site.js"></script>
<script src="https://kit.fontawesome.com/01e6330f62.js" crossorigin="anonymous"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
@*Partial Container for the the partial pages, doing this to minimze page loads*@

<div class="side-bar">
    <i onclick="" class="burger-button fa-solid fa-bars"></i>

    <ul>
        <li onclick="viewPage(0)">Account Overview </li>
        <li onclick="viewPage(1)">Manage Locations </li>
        <li><a href="/account/request/certificate">Certificate Of Alarm</a></li>
        <li onclick="viewPage(3)">Billing</li>
        <li onclick="viewPage(4)">Invoices</li>
        <li onclick="viewPage(5)">Settings</li>
        <li onclick="viewPage(6)">Notifications</li>
        <li onclick="viewPage(7)">Contact Us</li>
        <li><a href="/aboutus">About Voltic</a></li>
        <li><a href="/TermsOfService">Terms Of Service</a></li>
    </ul>
    <p class="branding-header">Voltic</p>

</div>

<div class="main-container">

    <div class="quick-nav-bar">
        <p class="same-line default-top-nav" onclick="viewPage(0)">Account Overview <i class="fa-regular fa-note-sticky"></i></p>
        <p class="same-line special-item" onclick="viewPage(1)">My Accounts <i class="fa-solid fa-city"></i></p>
        <p class="same-line default-top-nav" onclick="viewPage(2)">Certificate Of Alarm <i class="fa-solid fa-certificate"></i></p>
        <p class="same-line default-top-nav" onclick="viewPage(3)">Billing <i class="fa-solid fa-money-bill"></i></p>
        <p class="same-line default-top-nav" onclick="viewPage(4)">Invoices <i class="fa-regular fa-envelope"></i></p>
        <p class="same-line default-top-nav" onclick="viewPage(5)">Settings <i class="fa-solid fa-gear"></i></p>
    </div>

    <div class="partial-page-container">

        <div id="partial-container">

            <div class="location-grid">

                <div>
                    <h1>Location Name</h1>
                    <p>Monthly Charge: X.xx</p>

                    <div>
                        <form asp-page="Location" method="post">
                            <input type="hidden" asp-for="LocationInfo.MonitoredAccountId"/>
                            <input asp-for="LocationInfo.locationName" />
                            <input asp-for="LocationInfo.alarmPassword" />
                            <input asp-for="LocationInfo.durressCode" />
                            <input asp-for="LocationInfo.emergencyContact" />
                            <input asp-for="LocationInfo.emergencyContactPhoneNumber" />
                            <input asp-for="LocationInfo.address" />
                            <input asp-for="LocationInfo.city" />
                            <input asp-for="LocationInfo.county" />
                            <input asp-for="LocationInfo.state" />
                            <input asp-for="LocationInfo.zipcode" />
                            <input asp-for="LocationInfo.installerCode" />
                            <input asp-for="LocationInfo.additionalInfo" />
                            <button type="submit" asp-page-handler="LocationInfo">Update Info</button>
                        </form>
                    </div>
                </div>

                <div>
                    <form asp-page="Location" method="post">

                        <h1>Account Features</h1>
                        @*@foreach(){*@
                        <div>
                            <p>Feature: </p>
                            <p>Price: $x.xx</p>
                        </div>
                        @*}
                        *@
                        <button type="submit" class="" asp-page-handler="RemoveFeature">Update</button>
                    </form>
                </div>

            </div>

            <div>

                <div>
                    <div>
                        <h1>Add Feature</h1>
                    </div>
                    <div>
                        <h1>Description</h1>
                    </div>
                    <div>
                        <h1>Price</h1>
                    </div>
                </div>
                @*@foreach(){*@
                    @*@if(plan contains plan{
                        continue;
                    }
                    *@
                <div>
                    <div>
                        @*<input type="checkbox" asp-for=""/>*@
                    </div>
                    <div>
                        <h1>Description</h1>
                    </div>
                    <div>
                        <h1>Price</h1>
                    </div>
                </div>
            </div>
             @*}*@


        </div>

    </div>

</div>
