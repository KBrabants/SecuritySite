@using SecuritySite.Models;
@model AccountInfo
<h1 class="left-margin blue">@Model.Name</h1>
<form asp-page="/Account/Index">

<div class="left-padding overview-grid">
        @*General Info*@

       
        <div>
            <br/>
            <p>Monitored Accounts: @Model.Accounts</p>
        </div>
        <div>
            <p>Email:</p>
            <input type="text" value="@Model.Email" id="accountInfo_Email" name="accountInfo.Email" />
        </div>

        <div>
            <p>Phone Number: </p>
            <input type="text" value="@Model.PhoneNumber" id="accountInfo_PhoneNumber" name="accountInfo.PhoneNumber" />
        </div>
        <div>
            <p>Billing address:</p>
            <input type="text" value="@Model.Address" id="accountInfo_Address" name="accountInfo.Address" />
        </div>

        <div>
            <p>City:</p>
            <input type="text" value="@Model.City" id="accountInfo_City" name="accountInfo.City" />
        </div>
        <div>
            <p>County:</p>
            <input type="text" value="@Model.County" id="accountInfo_County" name="accountInfo.County" />
        </div>

        <div>
            <p>Zipcode:</p>
            <input type="text" value="@Model.ZipCode" id="accountInfo_ZipCode" name="accountInfo.ZipCode" />
        </div>
        <div>
            <p>State:</p>
            <input type="text" value="@Model.State" id="accountInfo_State" name="accountInfo.State" />
        </div>


    </div>
    <p class="left-margin">Submit edits below</p>
    <button class="left-margin submit" type="submit" asp-page-handler="AccountInfo">Update</button>

</form>









