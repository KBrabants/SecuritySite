@page 
@model SecuritySite.Pages.Account.LoginModel
@{
    Layout = "~/Pages/shared/_Layout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/page.css" rel="stylesheet" />
<div class="page-body">


    <div class="img-container">
        <img class="full-image" src="/photos/commercial-monitoring.jpg" />

        <div class="relative-center-login">

            <form asp-page="account/login" method="post" class="login-form">

                <p>Customer Login</p>

                <input class="new-line" required type="text" asp-for="Input.emailAddress" placeholder="Email Address" />

                <input class="new-line" required type="password" asp-for="Input.password" placeholder="Password" />

                <label asp-for="Input.rememberSignin" class="same-line">Remember Me: </label>
                <input asp-for="Input.rememberSignin" class="same-line checkbox" type="checkbox" />

                <button class="new-line" action="submit">Login</button>

                <a class="new-line" href="/account/create">Create Account</a>

                <a class="new-line" href="/account/recoverpassword">Forgot Password</a>

            </form>

        </div>

    </div>



