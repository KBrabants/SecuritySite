@page
@model SecuritySite.Pages.New.LocationModel
@{
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h1>Test</h1>

<form asp-page="Location" method="post" class="new-location-form">
    @Html.AntiForgeryToken()
    <label asp-for="LocationInfo.locationName">Location Name:</label>
    <input asp-for="LocationInfo.locationName" />
    <span asp-validation-for="LocationInfo.locationName"></span>
    <br />

    <label asp-for="LocationInfo.alarmPassword">Alarm Password:</label>
    <input asp-for="LocationInfo.alarmPassword" />
    <span asp-validation-for="LocationInfo.alarmPassword"></span>
    <br />

    <label asp-for="LocationInfo.durressCode">Durress Password:</label>
    <input asp-for="LocationInfo.durressCode" />
    <span asp-validation-for="LocationInfo.durressCode"></span>
    <br />

    <label asp-for="LocationInfo.emergencyContact">Emergency Contact:</label>
    <input asp-for="LocationInfo.emergencyContact" />
    <span asp-validation-for="LocationInfo.emergencyContact"></span>
    <br />

    <label asp-for="LocationInfo.emergencyContactPhoneNumber">Emergency Contact Phone Number:</label>
    <input asp-for="LocationInfo.emergencyContactPhoneNumber" />
    <span asp-validation-for="LocationInfo.emergencyContactPhoneNumber"></span>
    <br />

    <label asp-for="LocationInfo.address">Location Address:</label>
    <input asp-for="LocationInfo.address" />
    <span asp-validation-for="LocationInfo.address"></span>
    <br />

    <label asp-for="LocationInfo.city">City:</label>
    <input asp-for="LocationInfo.city" />
    <span asp-validation-for="LocationInfo.city"></span>
    <br />

    <label asp-for="LocationInfo.county">County:</label>
    <input asp-for="LocationInfo.county" />
    <span asp-validation-for="LocationInfo.county"></span>
    <br />

    <label asp-for="LocationInfo.state">State:</label>
    <input asp-for="LocationInfo.state" />
    <span asp-validation-for="LocationInfo.state"></span>
    <br />

    <label asp-for="LocationInfo.zipcode">Zip/Postal Code</label>
    <input asp-for="LocationInfo.zipcode" />
    <span asp-validation-for="LocationInfo.zipcode"></span>
    <br />

    <label asp-for="LocationInfo.installerCode">Installer Code</label>
    <input asp-for="LocationInfo.installerCode" />
    <br />
    <label asp-for="LocationInfo.additionalInfo">Additional Info</label>
    <textarea asp-for="LocationInfo.additionalInfo"></textarea>
    <br />

        <div class="radio-grid">
            @foreach (var plan in Model.Features)
            {
              

                 <div>
                    <p class="same-line">@plan.FeatureName</p>
                        @(Html.RadioButtonFor(model => model.BasePlan, plan.Code))
                 </div>

                 <div>
                        @plan.Description
                 </div>

                 <div>
                    $@(plan.Price) Monthly
                 </div>
              
            }
        </div>




    <button type="submit">Add Features</button>
</form>