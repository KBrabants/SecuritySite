<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Voltic @ViewData["Title"]</title>
    <meta name="description" content="Voltic alarm monitoring in North Carolina, affordable and simplified service" />
    <meta name="keywords" content="alarm monitoring, richlands monitoring, alarm system, qolsys, honeywell, alarm technician, voltic, voltic monitoring, affordable monitoring, alarm system" />
    <link href="~/css/page.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/photos//uncompressed/shield-logo.png" />
    <script src="https://kit.fontawesome.com/01e6330f62.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>



        <div class="same-line page-header sticky" >

            <a class="voltic-top" style="text-decoration:none;" href="/">
            @*<object class="same-line"></object> Logo*@
            <i class="blue fa-solid fa-shield-halved shield-icon"></i>
            <p style="margin-left: 0px;" class="same-line">Voltic</p>
            </a>
            <div class="header-link-spacing">
                <a class="same-line" href="/#residential">Monitoring Plans</a>
                <a class="same-line" href="/about">About Us</a>
            <a class="same-line" href="/contact">Contact Us</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="same-line" href="/account">My Account</a>
            }
            else
            {
                <a class="same-line" href="/account/Login">Sign Up/Login</a>
            }
            </div>

        </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-grid">
        <div>
            <h1>Help</h1>
            <a href="/contact">Contact Us</a><br />
            <a href="/account/request/certificate">Certificate of Alarm</a><br />
            @if (User.Identity.IsAuthenticated)
            {
                
                <a href="/termsofservice">Terms And Conditions Monitoring</a>

                <br />
            }
        </div>
        <div>
            <h1>Information</h1>
            <a href="/about">About us</a><br />
            <a href="/contact">Contact us</a><br />
            <a href="/account">Customer Portal</a><br />
            <a></a>
        </div>
        <div>
            <h1>Want To Start?</h1>
            <a href="/account/create">Create Your Account</a><br/>
            <a href="/account">Add Monitored Location</a><br/>
            <a href="/contact">Schedule Appointment</a><br />
        </div>
        <br/>
    </footer>
    <div class="blue-line">
        <p class="same-line">Voltic</p> @* <i class="fa-brands fa-facebook same-line"></i> <i class="fa-brands fa-linkedin same-line"></i> *@
    </div>

@*    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SecuritySite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

